<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <!-- Navbar -->
      <header class="navbar">
          <%= link_to '$DATING_APP', root_url, class: 'navbar-appname' %>
          <nav class="navbar-buttons">
              <ul>
                  <% if logged_in? %>
                      <li>Hello, <%= current_user.username %>.</li>
                      <li><%= link_to 'User settings', controller: 'users', action: 'show', id: current_user.id %></li>
                      <li><%= link_to 'Logout', controller: 'sessions', action: 'destroy' %></li>
                  <% else %>
                      <li><%= link_to 'Log in', controller: 'sessions', action: 'new' %></li>
                  <% end %>
              </ul>
          </nav>
      </header>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
