<p id="notice"><%= notice %></p>

<h1>Memes about <%= @tag %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memes.each do |meme| %>
      <tr>
        <table>
          <td><%= meme.title %></td>
          <td><%= link_to 'Show', meme %></td>
        </table>
      </tr>
      <tr>
        <td>
          <img src=<%= meme.image %> class="meme">
          <br /><br />
        </td>
      </tr>
    <% end %>
  </tbody>

  
</table>

<br>

<%= link_to 'New Meme', new_meme_path %>
