  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <!-- This test is for when you are chatting in a conversation that already has thousands of messages -->

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <!-- Checkout homepage -->
    <transaction name="login">
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
      <thinktime value="2" random="true"></thinktime>

      
      <request>
        <dyn_variable name="authenticity_token"></dyn_variable>
        <http url='/login' version='1.1' method='GET'></http>
      </request>
      <thinktime value="5" random="true"></thinktime>
      <request subst="true">
        <http
          url='/login'
          version='1.1'
          method='POST'
          content_type='application/x-www-form-urlencoded'
          contents='session%5Busername%5D=abc&amp;session%5Bpassword%5D=password&amp;commit=Log+in'
          >
        </http>
      </request>
      </transaction>
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
      <request>
        <http url='/conversations' version='1.1' method='GET'></http>
      </request>
      <transaction name="writing_messages">
      <request subst="true">
        <http 
            url='/conversations/1'
            version='1.1'
            method='GET'
        ></http>
      </request>
      <!-- Chat back and forth for 1000 messages -->
      
      <for var="counter" from="1" to="1000" incr="1">
        <request subst="true">
            <http
                url='/conversations/1/writeMessage'
                version='1.1'
                method='POST'
                content_type='application/x-www-form-urlencoded'
                contents='data=writingmessages'
                >
            </http>
        </request>

       
        <request subst="true">
            <http url='/conversations/1' version='1.1' method='GET'></http>
        </request>
        
      </for>
      

      </transaction>

    </session>
  </sessions>
