<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/share/tsung/tsung-1.0.dtd" [] >
<tsung loglevel="notice">
  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="localhost" port="3000" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="10" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="10" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="10" unit="second">
      <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <!-- Checkout homepage -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
      <thinktime value="2" random="true"></thinktime>

      <!-- Set login details -->
      <setdynvars sourcetype="random_number" start="1000" end="9999">
        <var name="user_num" />
      </setdynvars>

      <!-- Sign up -->
      <request>
        <http url='/login' version='1.1' method='GET'></http>
      </request>
      <thinktime value="2" random="true"></thinktime>
      <request>
        <dyn_variable name="authenticity_token"></dyn_variable>
        <http url='/signup' version='1.1' method='GET'></http>
      </request>
      <thinktime value="5" random="true"></thinktime>
      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          content_type='application/x-www-form-urlencoded'
          contents='authenticity_token=%%_authenticity_token%%&amp;user%5Busername%5D=user%%_user_num%%&amp;user%5Bemail%5D=user%%_user_num%%%40example.com&amp;user%5Bpassword%5D=1234512345&amp;user%5Bpassword_confirmation%5D=1234512345&amp;commit=Create+my+account'
          >
        </http>
      </request>

      <!-- Go to homepage -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
      <thinktime value="2" random="true"></thinktime>

      <for var="counter" from="1" to="1000" incr="1">
        <request>
            <http url='/matches' version='1.1' method='GET'></http>
        </request>
        <thinktime value="0.5" random="true"></thinktime>
        <request subst="true">
            <http
            url='/matches/likeProfile?data%5Bprofile_id%5D=%%_counter%%'
            version='1.1'
            method='POST'
            content_type='application/x-www-form-urlencoded'
            contents='authenticity_token=%%_authenticity_token%%'
            >
            </http>
        </request>
      </for>
      

    </session>
  </sessions>
</tsung>
